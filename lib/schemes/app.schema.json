{
	"$schema" : "http://json-schema.org/draft-04/schema#",
	"title" : "App Config",
	"description" : "Base Project Options",
	"type" : "object",
	"properties" : {
    "title" : {
      "title" : "Title",
      "description" : "The app's title",
      "type" : "string"
    },
		"identifier" : {
      "title" : "Identifier",
			"description" : "The unique identifier for a project. Used to prefix database names etc.",
			"type" : "string"
		},
    "description" : {
      "title" : "Description",
      "type" : "string",
      "format" : "textarea"
    },
		"minLaunchTime" : {
      "title" : "Minimal launch time",
			"description" : "Min time before hiding Launch Screen",
			"type" : "number",
      "format" : "number",
      "minimum" : 0,
      "default" : 1200
		}
	},
  "required" : ["identifier", "title"]
}
